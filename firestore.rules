rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow all operations for invitations (public read, write for scanner)
    match /invitations/{document} {
      allow read: if true;
      allow write: if true;  // Allow scanner to update status
    }
    
    // Allow all operations for scan logs
    match /scanLogs/{document} {
      allow read, write: if true;
    }
    
    // Allow all operations for batches
    match /batches/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}