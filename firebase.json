{
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/telegram",
        "destination": "/telegram.html"
      },
      {
        "source": "/admin/dashboard",
        "destination": "/admin/dashboard.html"
      },
      {
        "source": "/admin/login",
        "destination": "/admin/login.html"
      },
      {
        "source": "/admin/email-campaign",
        "destination": "/admin/email-campaign.html"
      },
      {
        "source": "/admin/logs",
        "destination": "/admin/logs.html"
      },
      {
        "source": "/admin/debug",
        "destination": "/admin/debug.html"
      },
      {
        "source": "/admin/auth-test",
        "destination": "/admin/auth-test.html"
      },
      {
        "source": "/admin/direct-email",
        "destination": "/admin/direct-email.html"
      },
      {
        "source": "/admin/set-admin",
        "destination": "/admin/set-admin.html"
      },
      {
        "source": "/admin/activate-admin",
        "destination": "/admin/activate-admin.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "/telegram/**",
        "headers": [
          {
            "key": "X-Frame-Options",
            "value": "SAMEORIGIN"
          }
        ]
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "functions",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}